<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/featured/?shot, cocktail')">
  <div class="banner-content">
    <h1>Le Wagon Cocktails - Melbourne</h1>
    <p>Learn how to prepare amazing cocktails</p>
  </div>
</div>

<div class="container mt-3">
  <form action="row">
    <div class="row">
      <h1>Menu Cocktails</h1>
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <div class="cocktail-card">
            <%= link_to cocktail_path(cocktail) do %>
              <%= cl_image_tag cocktail.photo, width: 220, height: 300, crop: :fill, class:"card-img-top", alt:"Card image cap" %>
            <% end %>
            <div class="cocktail-card-content">
              <div class="cocktail-card-title">
                <h5 class="card-title"><p><i class="fas fa-glass-martini"></i> <%= cocktail.name %></p></h5>
              </div>
              <p>Description of <%= cocktail.name %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </form>
</div>
