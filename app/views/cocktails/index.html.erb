<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/featured/?cocktail')">
  <div class="banner-content">
    <h1>Le Wagon Cocktails - Melbourne</h1>
    <p>Learn how to prepare amazing cocktails</p>
  </div>
</div>

<div class="container mt-3">
  <form action="row">
    <div class="row">
      <h1>Menu Cocktails</h1>
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <div class="cocktail-card">
            <%= link_to cocktail_path(cocktail) do %>
              <img class="card-img-top" src="https://source.unsplash.com/featured/?cocktail" alt="Card image cap">
            <% end %>
            <div class="cocktail-card-content">
              <div class="cocktail-card-title">
                <h5 class="card-title"><i class="fas fa-glass-martini"></i><%= cocktail.name %></h5>
              </div>
              <p>Test ABC 123<%= cocktail.name %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </form>
</div>
